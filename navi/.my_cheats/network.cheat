% network

# Listening ports
ss --numeric --process --listening <protocol> <version> 'sport = :<port>'

# Listening on device
ss --numeric --process --listening 'dev = <device>'

# Connected to port
ss --numeric --process <protocol> <version> state connected 'dport = :<port>'

# List network devices
ip --brief link show

$ protocol: echo -e "--tcp\n--udp\n--unix\n"
$ version: echo -e "--ipv4\n--ipv6\n"
$ device: ip --json link show | jq -r '.[].ifname'
